<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="40"
            android:background="@drawable/signin_edit"
            android:orientation="vertical"
            android:scaleType="centerCrop">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="39"
            android:background="@color/banner_background"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

                <TextView
                    android:id="@+id/gmail"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="start"
                    android:text="First Sign In With Google."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="12"
                    android:background="#00A4B8EC">

                </com.google.android.gms.common.SignInButton>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_step"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="57"
            android:orientation="vertical">

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:background="@color/button_border" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="24">

                <Space
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center"
                            android:text="School Code:"
                            android:textColor="@color/button_border"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/school_name_et"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:ems="10"
                            android:inputType="number"
                            android:textColor="@color/blue_text_urgent"
                            android:textColorHighlight="@color/white"
                            android:textColorHint="@color/white"
                            android:textColorLink="@color/white" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/log_in"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:gravity="center|start"
                        android:onClick="log_in"
                        android:text="Enter An Existing School"
                        android:textAllCaps="false"
                        android:textColor="#535353"
                        android:textSize="18sp"
                        app:backgroundTint="#E2E2E3"
                        app:icon="@drawable/log_in"
                        app:iconGravity="start|end"
                        app:iconSize="30dp"
                        app:iconTint="#535353"
                        app:strokeColor="#FF535353"
                        app:strokeWidth="3px" />

                </LinearLayout>

                <Space
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:background="@color/button_border" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="12">

                <Space
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/new_school"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:capitalize="none"
                        android:gravity="center|start"
                        android:onClick="create_school"
                        android:text="Create A New School"
                        android:textAllCaps="false"
                        android:textColor="#535353"
                        android:textSize="18sp"
                        app:backgroundTint="#E2E2E3"
                        app:icon="@drawable/school"
                        app:iconGravity="end"
                        app:iconSize="30dp"
                        app:iconTint="#535353"
                        app:strokeColor="#FF535353"
                        app:strokeWidth="3px" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="10" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>